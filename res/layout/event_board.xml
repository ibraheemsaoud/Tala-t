<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/sy.UProject.talat"
    android:id="@+id/ET_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:navigationContentDescription="@string/back"
        app:navigationIcon="@drawable/ic_action_refresh" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/black1" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="@dimen/a600"
                android:layout_height="@dimen/ahundred"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/picture1" />

            <LinearLayout
                android:id="@+id/imageView2"
                android:layout_width="@dimen/a600"
                android:layout_height="@dimen/ahundred"
                android:layout_alignParentLeft="true" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ahundred"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/picture1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ahundred"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/picture1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="@dimen/a600"
                android:layout_height="@dimen/ahundred"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ImageView01" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ahundred"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/picture1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ahundred"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/picture1" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/ET_hang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/blue7"
                android:minHeight="50dp"
                android:text="Add"
                android:textColor="@color/black1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ET_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/blue7"
                android:minHeight="50dp"
                android:text="@string/share"
                android:textColor="@color/black1"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>