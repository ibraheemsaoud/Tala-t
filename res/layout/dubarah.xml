<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/sy.UProject.talat"
              android:background="@color/silver1"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/clicks"
        android:layout_width="match_parent"
        android:background="@color/black4"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="المزيد"
            android:layout_marginRight="1dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold"
            android:textColor="@color/dorange5"
            android:background="@color/black2"
            android:layout_below="@+id/dubarah"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="مساعدة"
            android:textStyle="bold"
            android:textColor="@color/dorange5"
            android:background="@color/black2"
            android:layout_below="@+id/dubarah"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="فرص"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/dorange"
            android:background="@color/black2"
            android:layout_below="@+id/dubarah"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold"
            android:text="الرئيسية"
            android:textColor="@color/dorange"
            android:background="@color/black2"
            android:layout_below="@+id/dubarah"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/dubarahlogo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:id="@+id/dubarah"
            android:gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_default"
            android:layout_margin="12dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="@color/dorange5"
            android:text="دخول"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/silver2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black6"
                android:textSize="20sp"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@drawable/all_edges"
                android:gravity="right"
                android:text=" دوبارة تضع كل ثقلها لإخراج الخير الموجود في قلب كل سوري للنهوض بسوريا وأبناءها. وعلى ذلك فهي تقوم بخدمة كل سوري يحتاج الى مساعدة من أي شكل باستثناء المساعدات المادية بكونها ضد السياسة العامة لفريق العمل فنحن نعمل جاهدين لحفظ كرامة السوريين وتأمين الأعمال المناسبة لهم وجعل السوريين عناصر فاعلة وضيوف كرام في البلدان التي يقيمون فيها."/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/silver2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:background="@drawable/all_edges">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:text="من القلب"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black6"
                    android:textSize="20sp"
                    android:gravity="right"
                    android:text="هي خدمة من دوبارة لتعطي المعنى الحقيقي للتكافل بين افراد المجتمع السوري .. وخصوصي اخواتنا يلي بالمخيمات ويلي اوضاعهم صعبة."/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/silver2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="4dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:background="@drawable/all_edges">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/com_facebook_blue"
                    android:textStyle="bold"
                    android:text="تابعنا على الفيسبوك"
                    android:paddingBottom="4dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dubarahad"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black6"
                    android:background="@color/com_facebook_blue"
                    android:textSize="20sp"
                    android:gravity="right"
                    android:text="‫#‏دوبارة‬ ‫#‏سوريا‬ ‫#‏فرص_عمل‬
كل يوم جديد بيجي معو فرص عمل جديدة .. وانت شو ناطر لتتلحلح!
AlphaApps ‪#‎Damascus‬ ‪#‎Syria‬"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:background="@drawable/all_edges">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:text="دراسة و تعليم"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black6"
                    android:textSize="20sp"
                    android:gravity="right"
                    android:text="هي خدمة من دوبارة لتعطي المعنى الحقيقي للتكافل بين افراد المجتمع السوري .. وخصوصي اخواتنا يلي بالمخيمات ويلي اوضاعهم صعبة."/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@color/material_deep_teal_500">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Dubarah.com 2013, All Rights Reserved ©"/>
    </LinearLayout>

</LinearLayout>