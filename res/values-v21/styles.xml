<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppThemePurple" parent="Theme.AppCompat">
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple8</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/black7</item>
        <item name="android:textColorHint">@color/black6</item>
        <item name="android:textColorPrimaryDisableOnly">@color/black7</item>

        <item name="editTextColor">@color/black7</item>
        <!-- gives an underline for the editText -->
        <item name="colorControlActivated">@color/purple</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="colorSwitchThumbNormal">@color/purple</item>
    </style>
