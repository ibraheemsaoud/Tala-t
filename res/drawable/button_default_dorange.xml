<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <corners android:radius="4dp"/>

            <solid android:color="@color/dorange1"/>

            <stroke android:width="4dp" android:color="@color/dorange3"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp"/>

            <solid android:color="@color/dorange3"/>

            <stroke android:width="2dp" android:color="@color/dorange4"/>
        </shape>
    </item>

</selector>